generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model RuralProductor {
  id             String       @id @default(uuid())
  documentNumber String       @unique
  documentType   DocumentType
  name           String
  properties     Property[]
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

enum DocumentType {
  cpf
  cnpj
}

model Property {
  id                      String         @id @default(uuid())
  name                    String
  city                    String
  state                   String
  totalAreaInHectares     Float
  vegetableAreaInHectares Float
  arableAreaInHectares    Float
  productorId             String
  createdAt               DateTime       @default(now())
  updatedAt               DateTime       @updatedAt
  productor               RuralProductor @relation(fields: [productorId], references: [id])
  crops                   Crop[]

  @@unique([productorId, name])
  @@index([state])
  @@index([productorId])
  @@map("properties")
}

model Crop {
  id         Int      @id @default(autoincrement())
  name       String
  propertyId String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  property   Property @relation(fields: [propertyId], references: [id])

  @@index([name])
  @@map("crops")
}
